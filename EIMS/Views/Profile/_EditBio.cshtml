@model ProfileViewModel

<div class="col-xl-4">
    <div class="card h-100">
        <div class="card-body">
            <div class="text-center">
                    <button class="btn btn-outline-primary btn-sm float-end mb-2" style="margin-right: 1rem" title="Edit"
                            onclick="showModal('@Url.Action("ChangeProfile", "Profile", null, Context.Request.Scheme)', 'Edit your Profile', 'profileModal')">
                        <i class="uil uil-pen"></i> Edit Profile
                    </button>
                <div class="clearfix"></div>
                <div>
                    <img src="https://ui-avatars.com/api/?color=ff0000&name=P" alt="" class="avatar-lg rounded-circle img-thumbnail">
                </div>
                <h5 class="mt-3 mb-1">@Model.User.Name</h5>
                <p class="text-muted">@Model.User.Email</p>

                <div class="mt-4">
                    <button type="button" class="btn btn-light btn-sm"><i class="uil uil-envelope-alt me-2"></i> Message</button>
                </div>
            </div>

            <hr class="my-4">

            <div class="text-muted">
                <h5 class="font-size-16">About</h5>
                @*<p>Hi I'm Marcus,has been the industry's standard dummy text To an English person, it will seem like simplified English, as a skeptical Cambridge.</p>*@
                <div class="table-responsive mt-4">
                    <div>
                        <p class="mb-1">State of Origin :</p>
                        <h5 class="font-size-14">@Model.StateOfOrigin</h5>
                    </div>
                    <div class="mt-4">
                        <p class="mb-1">Gender :</p>
                        <h5 class="font-size-14">@Model.Gender</h5>
                    </div>
                    <div class="mt-4">
                        <p class="mb-1">Date of Birth :</p>
                        <h5 class="font-size-14">@Model.Dob.ToLongDateString()</h5>
                    </div>
                    <div class="mt-4">
                        <p class="mb-1">Address :</p>
                        <h5 class="font-size-14">@Model.Address</h5>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


<!--Add or edit qualification modal-->
<div id="profileModal" class="modal fade" tabindex="1" role="dialog" aria-labelledby="Edit profile" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="myModalLabel">Add Educational Background</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body px-4">

            </div>
        </div>
    </div>
</div>