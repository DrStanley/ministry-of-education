@model IEnumerable<ExamViewModel>
@{
    ViewBag.Title = "Enroll Students";
}


<section class="container-fluid">
    <div class="row">
        <div class="col-lg-12 mx-lg-auto">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@ViewBag.Title</h4>
                    <hr />
                    <div class="container-fluid">
                        @if (Model.Any())
                        {
                            foreach (var exam in Model)
                            {
                                <div class="row p-3 mb-3 justify-content-between border border-light border-2 rounded">
                                    <div class="col-md-6 col-lg-4">
                                        <h5 class="mb-1">@exam.ExaminationName</h5>
                                        <div class="mb-1">@exam.ExaminationCode</div>
                                    </div>
                                    <div class="col-md-6 col-lg-4 mt-4 mt-md-0">
                                        <div class="mb-1">
                                            <a asp-controller="EnrollStudents" asp-action="AddExamStudents" class="btn btn-primary" asp-route-id="@exam.Id">Enroll Students</a>
                                        </div>
                                        <div>
                                            <a asp-controller="EnrollStudents" asp-action="OfferStudentSubjects" class="btn btn-success" asp-route-id="@exam.Id">Assign Subjects</a>
                                        </div>
                                    </div>
                                </div>  
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>


</section>