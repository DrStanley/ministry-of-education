@model IEnumerable<EnrollSubjectViewModel>
@{
    ViewBag.Title = "Assign Students to Subjects";
}

<section class="container-fluid">
    <div class="row">
        <div class="col-lg-12 mx-lg-auto">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@ViewBag.Title</h4>
                    <hr />
                    <div class="container-fluid">
                        @if (Model.Any())
                        {
                            foreach (var subject in Model)
                            {
                                <div class="row p-3 mb-3 justify-content-between border border-light border-2 rounded">
                                    <div class="col-md-6 col-lg-4">
                                        <h5 class="mb-1">@subject.SubjectName</h5>
                                        <div class="mb-1 text-muted">Student enrolled: @subject.OfferedStudents</div>
                                    </div>
                                    <div class="col-md-6 col-lg-4 mt-4 mt-md-0">
                                        <div class="mb-1">
                                            <a  class="btn btn-primary" href="@Url.Action("AssignToSubject", "EnrollStudents", new{ id=@subject.Id, examId=@subject.ExamId})">Enroll Students</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>


</section>
