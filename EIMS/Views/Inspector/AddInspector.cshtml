@model CreateInspectorViewModel
@{
    ViewBag.Title = "Add new Inspector";
}


<section class="container-fluid">

    <div class="row">
        <div class="col-lg-12 mx-lg-auto">
            <div class="card">
                <div class="card-body px-lg-5">
                    <h4 class="card-title">@ViewBag.Title</h4>
                    <hr />

                    <div class="row">
                        <div class="col-md-12 mx-lg-auto">
                            <div class="mt-4">

                                <form method="post" class="px-lg-4" asp-action="AddInspector" asp-controller="Inspector">
                                    @Html.AntiForgeryToken()

                                    <div class="text-danger" asp-validation-summary="All"></div>

                                    <div class="row mb-3">
                                        <div class="col-lg-6">
                                            <label class="form-label pt-2" asp-for="Title"></label>
                                            <select class="form-select w-100" id="formrow-email-input" asp-for="Title" style="max-width: none">
                                                <option value="Mr">Mr.</option>
                                                <option value="Mrs">Mrs.</option>
                                                <option value="Dr">Dr.</option>
                                            </select>
                                            <span class="text-danger text-center" asp-validation-for="Title"></span>
                                        </div>

                                        <div class="col-lg-6">
                                            <label class="form-label pt-2" asp-for="Name"></label>
                                            <input type="text"required class="form-control w-100" asp-for="Name" style="max-width: none"/>
                                            <span class="text-danger text-center" asp-validation-for="Name"></span>
                                        </div>
                                    </div>


                                    <div class="row mb-3">
                                        <div class="col-lg-6">
                                            <label class="form-label pt-2" asp-for="Email"></label>
                                            <input type="text" required class="form-control w-100" asp-for="Email" style="max-width: none"/>
                                            <span class="text-danger text-center" asp-validation-for="Email"></span>

                                        </div>
                                        <div class="col-lg-6">
                                            <label class="form-label pt-2" asp-for="PhoneNumber"></label>
                                            <input type="text"required class="form-control w-100" asp-for="PhoneNumber" style="max-width: none"/>
                                            <span class="text-danger text-center" asp-validation-for="PhoneNumber"></span>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <div class="col-lg-6">
                                            <label class="form-label pt-2" asp-for="LocalGovernmentId"></label>
                                            <select class="form-select w-100" id="LocalGovernmentId" asp-for="LocalGovernmentId" asp-items="@(new SelectList(Model.LocalGovernments, "Id", "Name"))"
                                                    style="max-width: none">
                                                <option selected="selected" value="" disabled aria-disabled="True">Please select LGA</option>
                                            </select>
                                            <span class="text-danger" asp-validation-for="LocalGovernmentId"></span>
                                        </div>
                                    </div>

                                    <div class="mt-4">
                                        <button type="submit" class="btn btn-primary w-md">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
