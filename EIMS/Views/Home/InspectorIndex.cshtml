@model InspectorViewModel
@{
    ViewBag.Title = "Home";
}
<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12" style="padding: 0px;">
            <div class="page-title-box d-flex align-items-center justify-content-between">
                <h4 class="mb-0">Inspector Dashboard</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->

    <div class="row">
        <div class="col-lg-4" style="padding-left: 0px;">
            <div class="card">
                <div class="card-body">
                    @*  <div class="float-end mt-2">
                            <div id="total-revenue-chart"></div>
                        </div>*@
                    <div>
                        <h4 class="mb-1 mt-1">
                            <span>@Model.User.Name</span>
                        </h4>
                        <p class="text-muted mb-0">@Model.Status</p>
                    </div>
                    @*     <p class="text-muted mt-3 mb-0">
                            <span class="text-success me-1"><i class="mdi mdi-arrow-up-bold me-1"></i>2.65%</span> since last week
                        </p>*@
                </div>
            </div>
        </div> <!-- end col-->


        <div class="col-lg-4" style="padding-left: 0px;">
            <div class="card">
                <div class="card-body">
                    @*<div class="float-end mt-2">
                            <div id="customers-chart"> </div>
                        </div>*@
                    <div>
                        <h4 class="mb-1 mt-1">
                            <span>
                                @if (Model.LocalGovernment == null)
                                {
                                    @("Not Assigned")
                                }
                                else
                                {
                                    @(Model.LocalGovernment.Name)
                                }
                            </span>
                        </h4>
                        <p class="text-muted mb-0">Assigned Local Governments</p>
                    </div>
                    @* <p class="text-muted mt-3 mb-0">
                            <span class="text-danger me-1"><i class="mdi mdi-arrow-down-bold me-1"></i>6.24%</span> since last week
                        </p>*@
                </div>
            </div>
        </div> <!-- end col-->

        <div class="col-lg-4" style="padding-left: 0px;">

            <div class="card">
                <div class="card-body">

                    <div>
                        <h4 class="mb-1 mt-1">

                            <span data-plugin="counterup">@Model.SchoolsCount</span>
                        </h4>
                        <p class="text-muted mb-0">Total Schools in LGA</p>
                    </div>
                @*     <p class="text-muted mt-3 mb-0">
                            <span class="text-success me-1"><i class="mdi mdi-arrow-up-bold me-1">10.9</i>
                                </span> Schools </p>*@
                </div>
            </div>
        </div><!-- end col-->
    </div> <!--end row-->

    <div class="row">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Activity</h4>

                <ol class="activity-feed mb-0 ps-2" data-simplebar style="max-height: 336px;">
                    @if (Model.InspectorLogs.Count() > 0)
                    {
                        foreach (var act in Model.InspectorLogs)
                        {
                            <li class="feed-item">
                                <div class="feed-item-list">
                                    <p class="text-muted mb-1 font-size-13">
                                        @(act.CreatedAt.Date.ToShortDateString() == DateTime.Today.ToShortDateString() ? "Today" : act.CreatedAt.Date.ToShortDateString())
                                        <small class="d-inline-block ms-1">@act.CreatedAt.ToShortTimeString()</small>
                                    </p>
                                    <p class="text-primary mt-0 mb-0">
                                        @act.LogType.ToString()
                                    </p>
                                    <p class="mt-0 mb-0">
                                        @act.Details

                                    </p>
                                </div>
                            </li>

                        }
                    }
                    else
                    {
                        <li class="feed-item">
                            <p class="text-muted mb-1 font-size-13">
                                No Activity Yet
                            </p>
                        </li>
                    }

                </ol>
            </div> <!-- end card-body-->
        </div> <!-- end card-->
    
    </div> <!-- end row-->
    
</div>
<!-- container-fluid -->